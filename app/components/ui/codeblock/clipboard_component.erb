<div data-controller="clipboard" data-clipboard-success-value="<%= @success %>" data-clipboard-error-value="<%= @error %>" class="<%= @attrs[:class] %>">
  <%= content %>
  <%= render(Ui::Codeblock::PopoverComponent.new(type: :success)) do %>
    <%= @success %>
  <% end %>
  <%= render(Ui::Codeblock::PopoverComponent.new(type: :error)) do %>
    <%= @error %>
  <% end %>
</div>