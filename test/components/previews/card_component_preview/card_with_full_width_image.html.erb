<%= render(UI::Card::Component.new(class: 'w-96 overflow-hidden')) do %>
    <%= render(UI::AspectRatio::Component.new(aspect_ratio: "16/9", class: "border-b")) do |component| %>
      <% component.with_image do %>
        <img src='/assets/image-test.jpg' alt='Placeholder' loading='lazy'>
     <% end %>
    <% end %>
    <%= render(UI::Card::HeaderComponent.new) do %>
      <%= render(UI::Card::TitleComponent.new) do %>
        Introducing PhlexUI
      <% end %>
       <%= render(UI::Card::DescriptionComponent.new) do %>
        Kickstart your project today!
      <% end %>
    <% end %>

    <%= render(UI::Card::FooterComponent.new(class: 'flex justify-end')) do %>
       <%= render(UI::Button::Component.new(variant: :outline))do %>
        Get started
      <% end %>
    <% end %>
<% end %>
