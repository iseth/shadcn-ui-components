<%= render(UI::Card::Component.new(class: 'w-96')) do %>
    <%= render(UI::Card::HeaderComponent.new) do %>
      <%= render(UI::Card::TitleComponent.new) do %>
        You might like "PhlexUI
      <% end %>
       <%= render(UI::Card::DescriptionComponent.new) do %>
        @joeldrapper
      <% end %>
    <% end %>
    <%= render(UI::Card::ContentComponent.new) do %>
      <%= render(UI::AspectRatio::Component.new(aspect_ratio: "16/9", class: "rounded-md overflow-hidden border")) do |component|
      component.with_image do
        "<img src='/assets/image-test.jpg' alt='Placeholder' loading='lazy'>".html_safe
      end
    end %>
    <% end %>
    <%= render(UI::Card::FooterComponent.new(class: 'flex justify-end gap-x-2')) do %>
       <%= render(UI::Button::Component.new(variant: :outline))do %>
        See more
      <% end %>
      <%= render(UI::Button::Component.new(variant: :primary))do %>
        Click me
      <% end %>
    <% end %>
<% end %>
