<%= render(AlertDialogComponent.new) do |component| %>
  <% component.with_trigger do
   render(ButtonComponent.new(variant: :primary)) do |component|
      "Click me"
    end  
   end %>
  <% component.with_header(render(AlertDialog::TitleComponent.new) do
        "Are you absolutely sure?"
        end, render(AlertDialog::DescriptionComponent.new) do
        "This action cannot be undone. This will permanently delete your account and remove your data from our servers."
        end) %>
  <% component.with_footer(
        render(AlertDialog::ActionComponent.new) do
        "Action"
        end,
        render(AlertDialog::CancelComponent.new(type: 'button')) do
        "Cancel"
        end
      ) %>
<% end %>
