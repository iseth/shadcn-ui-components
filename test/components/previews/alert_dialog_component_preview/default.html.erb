<%= render(UI::AlertDialog::Component.new) do |component| %>
  <% component.with_trigger do
   render(UI::Button::Component.new(variant: :primary)) do |component|
      "Click me"
   end
  end %>
  <% component.with_header(render(UI::AlertDialog::TitleComponent.new) do
        "Are you absolutely sure?"
        end, render(UI::AlertDialog::DescriptionComponent.new) do
        "This action cannot be undone. This will permanently delete your account and remove your data from our servers."
        end) %>
  <% component.with_footer(
        render(UI::AlertDialog::CancelComponent.new(type: 'button')) do
        "Cancel"
        end
      ) do %>
     <%= render(UI::Button::Component.new(variant: :primary)) do
        "Action"
        end %>
      <% end %>
<% end %>
